<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean  name="T1" class="pizzaservice.Test2SomeService"/>

    <bean name="pizzaService" class="pizzaservice.SimplePizzaService">
        <constructor-arg ref="pizzaRepository"/>
    </bean>
    <bean name="orderService" class="pizzaservice.SimpleOrderService">
        <constructor-arg ref="pizzaService"/>
        <constructor-arg ref="orderRepository"/>
    </bean>

    <bean class="pizzaservice.UsageSomeService" init-method="init">
        <constructor-arg>
            <bean name="inner" class="pizzaservice.Test2SomeService"/>
            <!--<ref parent="T1"/>-->
        </constructor-arg>
    </bean>
</beans>