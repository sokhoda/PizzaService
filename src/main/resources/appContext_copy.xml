<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:component-scan base-package="domain.*"/>
    <!--customer description-->
    <bean id="customer" class="domain.Customer">
        <constructor-arg name="name" value="Maria Petrenko"/>
        <constructor-arg name="address" ref="address"/>
        <property name="loyaltyCard" ref="loyaltyCard"/>

    </bean>

    <bean id="address" class="domain.Address">
        <constructor-arg name="name" value="Kudryashova"/>
        <constructor-arg name="type" value="str"/>
        <constructor-arg name="buildingNo" value="18-A"/>
        <constructor-arg name="appNo" value="1"/>
    </bean>

    <bean id="loyaltyCard" class="domain.LoyaltyCard">
        <constructor-arg name="sum" value="0."/>
    </bean>

    <bean name="order" class="domain.Order" scope="prototype"/>

    <!--pizzaservice.states description-->
    <!--service description-->
    <bean name="pizzaService" class="pizzaservice.SimplePizzaService"
          autowire="constructor"/>
    <bean name="orderService" class="pizzaservice.SimpleOrderService"
          autowire="constructor">
        <lookup-method name="createNewOrder" bean="order"/>
    </bean>

</beans>